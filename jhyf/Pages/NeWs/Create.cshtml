<link href="~/lib/froala-editor/css/froala_editor.min.css" rel="stylesheet" />

<h1>Создать новую новость</h1>

@* <hr /> *@
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label for="Title" class="form-label" asp-for="AddNews.Title">Заголовок</label>
        <input type="text" class="form-control" id="Title" asp-for="AddNews.Title">
    </div>
    <div class="input-group mb-3">
        @* <label class="input-group-text" for="ImageNews">Выбрать файл</label> *@
        <input type="file" name="file" class="form-control" id="NameFile" asp-for="AddNews.NameFile">
    </div>
    <div class="form-group">
        <label asp-for="AddNews.LinkImage" class="control-label"></label>
        <input asp-for="AddNews.LinkImage" class="form-control" />
        <span asp-validation-for="AddNews.LinkImage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddNews.NameDoc" class="control-label"></label>
        <input asp-for="AddNews.NameDoc" class="form-control" />
        <span asp-validation-for="AddNews.NameDoc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddNews.LinkFile" class="control-label"></label>
        <input asp-for="AddNews.LinkFile" class="form-control" />
        <span asp-validation-for="AddNews.LinkFile" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label" asp-for="AddNews.Description">Текст публикации</label>
        <textarea id="Description" asp-for="AddNews.Description"></textarea>
        <span asp-validation-for="AddNews.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Опубликовать новость" class="btn btn-primary" /> |
        <a asp-page="Index">Отмена</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/froala-editor/js/froala_editor.min.js"></script>
<script>
    var description = new FroalaEditor("#Description");
    var shortDescription = new FroalaEditor("#shortDescription");
</script>