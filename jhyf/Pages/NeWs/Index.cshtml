@foreach (var item in Model.AddNews)
{
    <label></label>
    <div class="text-center">
        <h6>@Html.DisplayFor(modelItem => item.Created)</h6>
    </div>
    @if (item.NameFile != null)
    {
        <div class="row">
            <div class="col-md-4" style="background-color:lightsteelblue">
                <section>
                    <a href="@item.LinkImage"><img src="~/Images/@item.NameFile" width="250" height="200" /></a>
                </section>
            </div>
            <div class="col-md-6 col-md-offset-2" style="background-color:lightsteelblue">
                <section>
                    <h4>@Html.DisplayFor(modelIem => item.Title)</h4>
                    <div><p class="card-text">@Html.Raw(item.Description)</p></div>
                    <a href="@item.LinkFile" style="color:lightseagreen">@item.NameDoc</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="text-end fr-margin-16">
                            <a asp-page="./Delete" asp-route-id="@item.Id" style="text-decoration:none;" class="btn btn-danger">Удалить</a>
                        </div>
                    }
                </section>
            </div>
        </div>
    }
}