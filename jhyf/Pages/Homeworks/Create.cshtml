@model jhyf.Pages.Homeworks.CreateModel

@{
    ViewData["Title"] = "Добавление домашнего задания";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Добавление домашнего задания</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AddHomework.Name" class="control-label"></label>
                <input asp-for="AddHomework.Name" class="form-control" />
                <span asp-validation-for="AddHomework.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddHomework.Zadanie" class="control-label"></label>
                <input asp-for="AddHomework.Zadanie" class="form-control" />
                <span asp-validation-for="AddHomework.Zadanie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddHomework.Opisanie" class="control-label"></label>
                <input asp-for="AddHomework.Opisanie" class="form-control" />
                <span asp-validation-for="AddHomework.Opisanie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />  |
                <a asp-page="Index">Отмена</a>
            </div>
        </form>
    </div>
</div>

